floating_modifier $mod normal
bindsym --release Super_L exec $menu

bindsym {
	$mod+Escape reload
	$mod+Tab exec $windows

	$mod+Left focus left
	$mods+Left move left
	
	$mod+Down focus down
	$mods+Down move down
	
	$mod+Up focus up
	$mods+Up move up
	
	$mod+Right focus right
	$mods+Right move right

	$mod+space floating toggle
}

bindsym {
	$mod+1  workspace 1
	$mods+1	move container to workspace 1
	
	$mod+2  workspace 2
	$mods+2	move container to workspace 2
	
	$mod+3  workspace 3
	$mods+3	move container to workspace 3
	
	$mod+4  workspace 4
	$mods+4	move container to workspace 4
	
	$mod+5  workspace 5
	$mods+5	move container to workspace 5
	
	$mod+6  workspace 6
	$mods+6	move container to workspace 6
}

